package produto;

public class Produto_Principal {

	public static void main(String[] args) {
		 
		    Produto produto1 = new Produto("Camisa", 50.0, "Camisa de algodão");
		    Produto produto2 = new Produto("Calça", 80.0, "Calça jeans");

		    // Exibindo informações dos produtos
		    System.out.println("Produto 1:");
		    System.out.println("Nome: " + produto1);
		    System.out.println("Preço: R$" + produto1);
		    System.out.println("Descrição: " + produto1);

		    System.out.println("Produto 2:");
		    System.out.println("Nome: " + produto2);
		    System.out.println("Preço: R$" + produto2);
		    System.out.println("Descrição: " + produto2);

	}

}
